green = "#a5e521"

@font-face
  font-family "Futura"
  src url('futura-book.otf') format('opentype')


@font-face
  font-family "Futura"
  src url('futura-bold.otf') format('opentype')

  font-weight bold


*
  box-sizing border-box

body
  display grid
  background #e6e7e8
  color #626366
  font-family "Futura", sans-serif
  margin 0

p
  line-height 1.3

.quiz
  margin auto
  display grid
  grid-template-columns repeat(6, 1fr)
  grid-template-rows repeat(6, 1fr)
  grid-gap 1.8em
  width 1024px
  height 768px
  padding 2em 3em


.heading
  grid-area 1 / 1 / 2 / 7
  color #32d2d2


.nanobar
  display inline-block
  border 4px solid #32d2d2
  background #32d2d2
  align-self start

.visuals
  position relative
  display: flex;
  align-items: center;
  justify-content: center;

  grid-area 2 / 1 / 3 / 3

  img
    max-height 100%
    max-width 100%

  .score
    position absolute
    top 15%
    left 27%
    
    font-size 4em
    color #a5e521
    font-weight bold
    z-index 100

.texts
  display grid
  grid-template-rows repeat(2, 1fr)
  grid-area 2 / 3 / 3 / 7

.prelude
  p
    padding 0
    margin 0
    font-size 1.2em

  p+p
    margin-top 2em
    font-weight bold

  h2
    line-height 1.4

p.question
  align-self start
  font-weight bold
  padding 0
  margin 0
  font-size 1.2em

.bravo
  font-style italic


.ui
  display grid
  grid-template-columns repeat(2, 1fr)
  grid-template-rows repeat(2, 1fr)
  grid-gap 1em
  align-self end


.tak
.nie
  grid-column span 1


.next
  grid-column span 2
  grid-area 2 / 1 / 3 / 3

.messages
  grid-area 3 / 3 / 7 / 7
  padding 0
  margin 0
  p
    align-self start
    padding 0
    font-size 1em

  p.toast
    text-transform uppercase


  p.reply
    font-style italic


.options
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-area 3 / 1 / 5 / 2
  grid-gap 0.5em


button
  color #626366
  font-weight bold
  font-size 1.1em
  height 60px
  text-transform uppercase
  outline none
  border none
  box-shadow -2px 2px 2px rgba(0, 0, 0, 0.2)

button:disabled
  background #d6d6d6
  color #939393


button::-moz-focus-inner
  border: 0


.modal
  display: flex;
  align-items: center;
  justify-content: center;
  height 100%
  width 100%
  background rgba(0, 0, 0, 0.4)
  z-index 999
  position fixed
  left 0
  top 0

.info
  position relative
  background white
  width 40%
  padding 4em

.close
  position absolute
  right 20px
  top 20px

#revert
  text-align center

  .revert-info
    display grid
    grid-gap 3em
    grid-template-columns repeat(2, 1fr)
    grid-template-rows repeat(2, 1fr)
    position relative
    background white
    width 40%
    padding 4em

  h3
    grid-column span 2
    
  h4
    grid-column span 1
    text-transform uppercase
    color #32d2d2

  .no
    text-align right
  .yes
    text-align left
